
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
  
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to all files.
    // This is necessary for images to be displayed in your app.
    // Write access is restricted by the more specific rules below.
    match /{allPaths=**} {
      allow read;
    }

    // User can only write to their own profile picture folder
    match /profile-pictures/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }
    
    // Any authenticated user can upload community and event images.
    // This is a trade-off for simplicity. A more complex rule could check
    // Firestore to verify founder/submitter status, but requires more setup.
    match /community-logos/{fileName} {
        allow write: if isSignedIn();
    }
     match /community-banners/{fileName} {
        allow write: if isSignedIn();
    }
    match /event-banners/{fileName} {
        allow write: if isSignedIn();
    }
     match /deal-images/{fileName} {
        allow write: if isSignedIn();
    }
  }
}


rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read on all files.
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write only for authenticated users.
    // You could add further path-specific restrictions here if needed.
    // e.g., match /profile-pictures/{userId}/{fileName} { ... }
    match /{allPaths=**} {
       allow write: if request.auth != null;
    }
  }
}

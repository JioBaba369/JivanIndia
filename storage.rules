rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    function isAuth() {
      return request.auth != null;
    }
    
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read on all files in these folders
    match /profile-pictures/{allPaths=**} {
      allow read: if true;
    }
    match /event-banners/{allPaths=**} {
      allow read: if true;
    }
    match /community-logos/{allPaths=**} {
      allow read: if true;
    }
    match /community-banners/{allPaths=**} {
      allow read: if true;
    }
    match /deal-images/{allPaths=**} {
      allow read: if true;
    }
    match /sponsor-logos/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write only for authenticated users and enforce file size/type
    match /{folder}/{fileName} {
      allow write: if isAuth()
                   && request.resource.size < 10 * 1024 * 1024 // 10 MB limit
                   && request.resource.contentType.matches('image/.*');
    }
  }
}

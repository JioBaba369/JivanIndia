rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Publicly readable files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Profile Pictures: Users can only write to their own folder.
    match /profile-pictures/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Other folders (community logos, banners, etc.): Any authenticated user can write.
    match /{folderName}/{fileName} where folderName in ['community-logos', 'community-banners', 'event-banners', 'deal-images', 'provider-images', 'sponsor-logos'] {
       allow write: if request.auth != null
                    && request.resource.size < 10 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}

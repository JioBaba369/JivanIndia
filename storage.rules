
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access for all files
    allow read: if true;

    // Disallow listing files by default
    allow list: if false;

    // General write rule for authenticated users with size and type checks
    // This applies to folders that don't have a more specific rule below.
    allow write: if request.auth != null
                 && request.resource.size < 10 * 1024 * 1024
                 && request.resource.contentType.matches('image/(jpeg|png|webp)');

    // Profile pictures: User can only write to their own folder.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Community assets: Any authenticated user can write.
    // This is because a user creates a community and needs to upload logos/banners
    // before the community document might be fully associated.
    match /community-logos/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /community-banners/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Event and Deal images: Any authenticated user can write.
    // Typically, only users affiliated with an organization can create these,
    // which is handled by app logic, but the storage rule is open to any auth'd user.
    match /event-banners/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /deal-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /provider-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
     match /sponsor-logos/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}

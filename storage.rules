rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access only to authenticated users
    // This is a broad rule; for production, you might want to restrict
    // by path, file size, or content type.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}

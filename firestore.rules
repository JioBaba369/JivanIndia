
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check the existing resource in database, not the incoming one
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isCommunityFounder(communityId) {
        return get(/databases/$(database)/documents/communities/$(communityId)).data.founderUid == request.auth.uid;
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // --- Collections ---
    
    // Users Collection
    match /users/{userId} {
      // Anyone can read a user profile (for public profile pages)
      allow read: if true;
      
      // Only the owner can create their own document
      allow create: if isOwner(userId);
      
      // Users can update their own profile, but cannot change their isAdmin status
      allow update: if isOwner(userId) && request.resource.data.isAdmin == resource.data.isAdmin;
      
      // Users can delete their own account
      allow delete: if isOwner(userId);
    }
    
    // Communities Collection
    match /communities/{communityId} {
      // Anyone can read community data
      allow read: if true;
      
      // Any signed-in user can create a community
      allow create: if isSignedIn();
      
      // Only the founder or an admin can update a community
      allow update: if isCommunityFounder(communityId) || isAdmin();
      
      // Only the founder or an admin can delete a community
      allow delete: if isCommunityFounder(communityId) || isAdmin();
    }
    
    // Events Collection
    match /events/{eventId} {
      // Anyone can read event data
      allow read: if true;
      
      // Any signed-in user can create an event
      allow create: if isSignedIn();
      
      // Only the user who submitted the event or an admin can update it
      allow update: if request.auth.uid == resource.data.submittedByUid || isAdmin();
      
      // Only the user who submitted the event or an admin can delete it
      allow delete: if request.auth.uid == resource.data.submittedByUid || isAdmin();
    }
    
    // About Collection (Singleton Document)
    match /about/singleton {
       // Anyone can read the about page content
      allow read: if true;
      
      // Only admins can write to the about page
      allow write: if isAdmin();
    }
  }
}

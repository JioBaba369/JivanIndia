
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    function isCommunityManager() {
        return request.auth.token.communityManager == true;
    }
    
    function isAffiliatedWith(orgId) {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.affiliation.orgId == orgId;
    }

    // Collection Rules
    match /users/{userId} {
      allow read;
      allow create: if isSignedIn();
      allow update: if isOwner(userId);
    }

    match /events/{eventId} {
      allow read: if resource.data.status == 'Approved' || isAdmin() || (isCommunityManager() && isAffiliatedWith(resource.data.organizerId));
      allow create: if isSignedIn() && request.resource.data.submittedByUid == request.auth.uid && isAffiliatedWith(request.resource.data.organizerId);
      allow update: if isAdmin() || (isCommunityManager() && isAffiliatedWith(resource.data.organizerId));
    }

    match /communities/{communityId} {
      allow read;
      allow create: if isSignedIn() && request.resource.data.founderUid == request.auth.uid;
      allow update, delete: if isAdmin() || (isCommunityManager() && isAffiliatedWith(communityId));
    }
    
    match /businesses/{businessId} {
        allow read;
        allow create, update: if isAdmin();
    }
    
    match /sponsors/{sponsorId} {
        allow read;
        allow create, update: if isAdmin();
    }

    match /reports/{reportId} {
      allow read, update: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.reportedByUid == request.auth.uid;
    }
    
    match /notifications/{notificationId} {
        allow read, update: if isOwner(resource.data.userId);
        allow create: if isAdmin() || isCommunityManager(); 
    }
    
    match /contacts/{contactId} {
        allow read: if isAdmin();
        allow create: if true;
    }
    
    match /about/singleton {
        allow read;
        allow update: if isAdmin();
    }
    
    match /movies/{movieId} {
      allow read;
    }
    
     match /deals/{dealId} {
      allow read;
      allow create: if isSignedIn() && isAffiliatedWith(request.resource.data.businessId);
    }
    
     match /jobs/{jobId} {
      allow read;
      allow create: if isSignedIn() && isAffiliatedWith(request.resource.data.companyId);
    }

  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/about/singleton).data.adminUids.has(request.auth.uid);
    }
    
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Public content, readable by all
    match /{publicCollection}/{docId} where publicCollection in ['events', 'communities', 'businesses', 'deals', 'movies', 'sponsors', 'festivals', 'jobs'] {
      allow read: if true;
      allow write: if false; // Writing is handled by more specific rules below or should be done via backend functions
    }
    
    match /about/singleton {
        allow read: if true;
        allow write: if isAdmin();
    }

    // User profiles
    match /users/{userId} {
      // Anyone can read a user's public profile
      allow read: if true;
      // Only the owner of the profile can create or update it
      allow write: if isOwner(userId);
    }

    // Creating new content
    match /events/{eventId} {
       // Allow read for everyone is covered by the public rule
       allow create: if request.auth != null; // Must be logged in to create
       allow update, delete: if isAdmin() || isOwner(resource.data.submittedByUid);
    }
    
    match /communities/{communityId} {
        // Allow read for everyone is covered by the public rule
        allow create: if request.auth != null; // Must be logged in to create
        allow update, delete: if isAdmin() || isOwner(resource.data.founderUid);
    }
    
     match /businesses/{businessId} {
        // Allow read for everyone is covered by the public rule
        allow create: if isAdmin(); // Only admins can create businesses
        allow update, delete: if isAdmin();
    }
    
    match /sponsors/{sponsorId} {
        // Allow read for everyone is covered by the public rule
        allow create: if isAdmin();
        allow update, delete: if isAdmin();
    }
    
     match /deals/{dealId} {
        // Allow read for everyone is covered by the public rule
        allow create: if request.auth != null;
        allow update, delete: if isAdmin() || isOwner(resource.data.submittedByUid);
    }
    
    match /jobs/{jobId} {
       // Allow read for everyone is covered by the public rule
       allow create: if request.auth != null;
       allow update, delete: if isAdmin() || isOwner(resource.data.submittedByUid);
    }
    
    // User-generated content like reports and notifications
    match /reports/{reportId} {
        allow create: if request.auth != null; // Must be logged in to report
        allow read, update, delete: if isAdmin(); // Only admins can manage reports
    }
    
    match /notifications/{notificationId} {
        allow read, update, delete: if isOwner(resource.data.userId); // Only the recipient can interact with their notifications
        allow create: if false; // Notifications are created by the system (or admin actions), not directly by users
    }
    
    match /contacts/{contactId} {
        allow create: if true; // Anyone can send a message
        allow read, update, delete: if isAdmin();
    }
  }
}

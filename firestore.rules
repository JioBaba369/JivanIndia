rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Collection: users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Collection: communities
    match /communities/{communityId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.founderUid == request.auth.uid || isAdmin());
    }

    // Collection: events
    match /events/{eventId} {
      allow read: if resource.data.status == 'Approved' || (isAuthenticated() && (resource.data.organizerId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.affiliation.orgId || isAdmin()));
      allow create: if isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.affiliation.orgId != null;
      allow update: if isAuthenticated() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.affiliation.orgId == resource.data.organizerId || isAdmin());
      allow delete: if isAuthenticated() && isAdmin();
    }
    
    // Collection: businesses
    match /businesses/{businessId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() && isAdmin();
    }

    // Collection: sponsors
    match /sponsors/{sponsorId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Collection: deals
    match /deals/{dealId} {
        allow read: if true;
        allow create: if isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.affiliation.orgId != null;
        allow update, delete: if isAuthenticated() && isAdmin();
    }

    // Collection: movies
    match /movies/{movieId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated() && isAdmin();
    }

    // Collection: jobs
    match /jobs/{jobId} {
        allow read: if true;
        allow create: if isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.affiliation.orgId != null;
        allow update, delete: if isAuthenticated() && isAdmin();
    }

    // Collection: reports
    match /reports/{reportId} {
      allow read, write: if isAuthenticated() && isAdmin();
      allow create: if isAuthenticated();
    }
    
    // Collection: notifications
    match /notifications/{notificationId} {
        allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // Collection: contacts
    match /contacts/{contactId} {
      allow create: if true;
      allow read, write, delete: if isAuthenticated() && isAdmin();
    }

    // Document: about/singleton
    match /about/singleton {
      allow read: if true;
      allow write: if isAuthenticated() && isAdmin();
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCommunityFounder(communityId) {
      return get(/databases/$(database)/documents/communities/$(communityId)).data.founderUid == request.auth.uid;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Public read access for most collections
    match /about/{docId} {
      allow read: if true;
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    match /communities/{communityId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (isOwner(resource.data.founderUid) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    match /events/{eventId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (isOwner(resource.data.submittedByUid) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
    }
    match /deals/{dealId} {
      allow read: if true;
      allow create, update: if isSignedIn();
    }
     match /jobs/{jobId} {
      allow read: if true;
      allow create, update: if isSignedIn();
    }
    match /movies/{movieId} {
      allow read: if true;
      allow create, update: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    match /providers/{providerId} {
        allow read: if true;
        allow create, update: if isSignedIn();
    }
    match /sponsors/{sponsorId} {
        allow read: if true;
        allow create, update: if isSignedIn();
    }
  }
}
